---
import type { MetaInfo } from "../types";

// Components
import Layout from "../layouts/Layout.astro";
import Breadcrumbs from "../components/Breadcrumbs/Breadcrumbs.astro";
import Button from "../components/Button/Button.astro";

// Meta Info
const metaInfo: MetaInfo = {
    description: "Thank you for booking a call",
    keywords: "shopify, development, agency",
    shouldIndex: false,
};

// Breadcrumbs
const links = [
    {
        label: "Thank you",
        href: "",
    },
];
---

<Layout title="Futuremerce - Thank you" metaInfo={metaInfo}>
    <Breadcrumbs links={links} />

    <h1 class="page-title">
        <span>Thank you</span> for <br> reaching out
    </h1>
    <p class="page-text">
        We'll get back to you as soon as possible. <br><br> Please book your free consultation using the widget below.
    </p>
    <!-- Cal inline embed code begins -->
    <div style="width:100%;height:100%;overflow:scroll" id="my-cal-inline"></div>
    <script type="text/javascript">
    (function (C, A, L) { let p = function (a, ar) { a.q.push(ar); }; let d = C.document; C.Cal = C.Cal || function () { let cal = C.Cal; let ar = arguments; if (!cal.loaded) { cal.ns = {}; cal.q = cal.q || []; d.head.appendChild(d.createElement("script")).src = A; cal.loaded = true; } if (ar[0] === L) { const api = function () { p(api, arguments); }; const namespace = ar[1]; api.q = api.q || []; if(typeof namespace === "string"){cal.ns[namespace] = cal.ns[namespace] || api;p(cal.ns[namespace], ar);p(cal, ["initNamespace", namespace]);} else p(cal, ar); return;} p(cal, ar); }; })(window, "https://app.cal.com/embed/embed.js", "init");
    Cal("init", "30min", {origin:"https://cal.com"});

    Cal.ns["30min"]("inline", {
        elementOrSelector:"#my-cal-inline",
        config: {"layout":"month_view","theme":"dark"},
        calLink: "futuremerce/30min",
    });

    Cal.ns["30min"]("ui", {"theme":"dark","styles":{"branding":{"brandColor":"#000000"}},"hideEventTypeDetails":false,"layout":"month_view"});
    </script>
  <!-- Cal inline embed code ends -->
</Layout>

<style lang="scss" is:inline>
    body > .button {
        margin: 40px auto 80px;
    }

    #my-cal-inline {
        width: calc(100% - 40px) !important;
        margin: 40px auto 80px;
        max-width: 900px;
    }

     .footer_wrapper:after {
        height: 600px;
        top: 100px;
    }

    .footer {
        overflow: hidden;
    }
    .footer_get-started {
        display: none;
    }

</style>
