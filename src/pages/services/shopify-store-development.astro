---
import type { Box, MetaInfo } from "../../types";
import { getCollection } from "astro:content";

// Components
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/Breadcrumbs/Breadcrumbs.astro";
import BoxGrid from "../../components/BoxGrid/BoxGrid.astro";
import Title from "../../components/Title/Title.astro";
import Button from "../../components/Button/Button.astro";
import FAQs from "../../components/FAQs/FAQs.astro";
import TrustedBy from "../../components/TrustedBy/TrustedBy.astro";
import TextImageGroup from "../../components/TextImageGroup/TextImageGroup.astro";
import HomepageAbout from "../../components/HomepageAbout/HomepageAbout.astro";
import ComparisonTable from "../../components/ComparisonTable/ComparisonTable.astro";
import Container from "../../components/Container/Container.astro";

// Images
import ServicesHomepageIcon from "../../icons/services-homepage.svg";
import shopify from "../../icons/shopify.svg";
import design from "../../icons/brush.svg";
import settings from "../../icons/settingscog.svg";
import functionality from "../../icons/services/development/functionality.svg";
import mobileOptimization from "../../icons/services/development/mobile-optimization.svg";
import migration from "../../icons/services/development/migration.svg";
import imageGroup1 from "../../images/development-1.png";
import imageGroup2 from "../../images/development-2.png";
import imageGroup3 from "../../images/performance-optimisation-2.png";
import pricing from "../../icons/homepage-pricing.svg";
import pricingBox1 from "../../icons/fixed-price.svg";
import pricingBox2 from "../../icons/subscription-pricing.svg";
import pricingBox3 from "../../icons/packages.svg";
import AboutIcon from "../../icons/about-homepage.svg";
import ComparisonIcon from "../../icons/crown.svg";

// Meta Info
const metaInfo: MetaInfo = {
    description:
        "At Futuremerce, we design and develop custom Shopify stores that perfectly reflect your brand and drive sales.",
    keywords: "shopify, development, agency",
    shouldIndex: true,
    schemaMetaInfo: `
<meta itemprop="name" content="Futuremerce - Shopify Store Development">
<meta itemprop="description" content="At Futuremerce, we design and develop custom Shopify stores that perfectly reflect your brand and drive sales.">
<meta itemprop="image" content="/overview.png">
`,
};

// Content
const benefits: Box[] = [
    {
        title: "Store Setup & Configuration",
        description:
            "We'll create a beautiful and branded store that stands out from the crowd through Shopify’s powerful, customizable platform.",
        image: shopify,
    },
    {
        title: "Functionality development",
        description:
            "Add the features you need to streamline your operations and enhance the customer experience.",
        image: functionality,
    },
    {
        title: "App integrations",
        description:
            "Our team can help install and configure apps to boost your marketing, sales, fulfillment, and more.",
        image: settings,
    },
    {
        title: "Mobile Optimization",
        description:
            "We ensure your store is fully responsive, providing an exceptional shopping experience on all devices.",
        image: mobileOptimization,
    },
    {
        title: "Migration to Shopify",
        description:
            "Looking to switch to Shopify? We ensure a smooth transition with minimal downtime so your customers are not affected.",
        image: migration,
    },
    {
        title: "Custom Design",
        description:
            "Elevate your brand with aesthetic and user-friendly design from our team of experienced UI/UX designers",
        image: design,
    },
];

const faqs = await getCollection("faqs", ({ data }) => {
    return data.type === "development";
});

const pricingBoxes: Box[] = [
    {
        image: pricingBox1,
        title: "Fixed Price Projects",
        description:
            "Get a fixed-price quote, taking into account  your specific circumstances. Perfect for clients who want a clear understanding of the cost before getting started.",
        cta: {
            label: "Get a free quote",
            link: "/get-started",
        },
    },
    {
        image: pricingBox2,
        title: "Subscription Pricing",
        description:
            "Have all of your development needs taken care of with a Futuremerce development subscription. Perfect for agencies and clients with ongoing development needs.",
        cta: {
            label: "See development plans",
            link: "/services/development-subscriptions",
        },
    },
    {
        image: pricingBox3,
        title: "Other Packages",
        description:
            "We also have other packages including ongoing maintenance, performance optimisation, and bug fixes to help streamline your needs.",
        cta: {
            label: "Browse other packages",
            link: "/pricing",
        },
    },
];

// Breadcrumbs
const links = [
    {
        label: "Shopify Store Development",
        href: "",
    },
];
---

<Layout title="Futuremerce - Shopify Store Development" metaInfo={metaInfo}>
    <Breadcrumbs links={links} />

    <h1 class="page-title long"><span>Result-driven</span> Shopify Store Development</h1>
    <p class="page-text">
        Investing in a well-designed Shopify store is an investment in your business growth. Our Shopify development services can help you gain a competitive edge and start selling more online.
    </p>
    <Button href="/get-started" type="primary">Get a free quote</Button>
    <div class="page-guarantees">
        <p class="page-guarantee">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M10.5 16.0605L6.75 12.3098L7.80975 11.25L10.5 13.9395L16.1887 8.25L17.25 9.31125L10.5 16.0605Z" fill="url(#paint0_linear_310_11)"/><path d="M12 1.5C9.9233 1.5 7.89323 2.11581 6.16652 3.26957C4.4398 4.42332 3.09399 6.0632 2.29927 7.98182C1.50455 9.90045 1.29661 12.0116 1.70176 14.0484C2.1069 16.0852 3.10693 17.9562 4.57538 19.4246C6.04383 20.8931 7.91476 21.8931 9.95156 22.2982C11.9884 22.7034 14.0996 22.4955 16.0182 21.7007C17.9368 20.906 19.5767 19.5602 20.7304 17.8335C21.8842 16.1068 22.5 14.0767 22.5 12C22.5 9.21523 21.3938 6.54451 19.4246 4.57538C17.4555 2.60625 14.7848 1.5 12 1.5ZM12 21C10.22 21 8.47992 20.4722 6.99987 19.4832C5.51983 18.4943 4.36628 17.0887 3.68509 15.4442C3.0039 13.7996 2.82567 11.99 3.17294 10.2442C3.5202 8.49836 4.37737 6.89471 5.63604 5.63604C6.89472 4.37737 8.49836 3.5202 10.2442 3.17293C11.99 2.82567 13.7996 3.0039 15.4442 3.68508C17.0887 4.36627 18.4943 5.51983 19.4832 6.99987C20.4722 8.47991 21 10.22 21 12C21 14.3869 20.0518 16.6761 18.364 18.364C16.6761 20.0518 14.387 21 12 21Z" fill="url(#paint1_linear_310_11)"/><defs><linearGradient id="paint0_linear_310_11" x1="12" y1="8.25" x2="12" y2="16.0605" gradientUnits="userSpaceOnUse"><stop stop-color="#BCB7FF"/><stop offset="1" stop-color="#703AB4"/></linearGradient><linearGradient id="paint1_linear_310_11" x1="12" y1="1.5" x2="12" y2="22.5" gradientUnits="userSpaceOnUse"><stop stop-color="#BCB7FF"/><stop offset="1" stop-color="#703AB4"/></linearGradient></defs></svg>
            100% Satisfaction Guarantee
        </p>    
        <p class="page-guarantee">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M10.5 16.0605L6.75 12.3098L7.80975 11.25L10.5 13.9395L16.1887 8.25L17.25 9.31125L10.5 16.0605Z" fill="url(#paint0_linear_310_11)"/><path d="M12 1.5C9.9233 1.5 7.89323 2.11581 6.16652 3.26957C4.4398 4.42332 3.09399 6.0632 2.29927 7.98182C1.50455 9.90045 1.29661 12.0116 1.70176 14.0484C2.1069 16.0852 3.10693 17.9562 4.57538 19.4246C6.04383 20.8931 7.91476 21.8931 9.95156 22.2982C11.9884 22.7034 14.0996 22.4955 16.0182 21.7007C17.9368 20.906 19.5767 19.5602 20.7304 17.8335C21.8842 16.1068 22.5 14.0767 22.5 12C22.5 9.21523 21.3938 6.54451 19.4246 4.57538C17.4555 2.60625 14.7848 1.5 12 1.5ZM12 21C10.22 21 8.47992 20.4722 6.99987 19.4832C5.51983 18.4943 4.36628 17.0887 3.68509 15.4442C3.0039 13.7996 2.82567 11.99 3.17294 10.2442C3.5202 8.49836 4.37737 6.89471 5.63604 5.63604C6.89472 4.37737 8.49836 3.5202 10.2442 3.17293C11.99 2.82567 13.7996 3.0039 15.4442 3.68508C17.0887 4.36627 18.4943 5.51983 19.4832 6.99987C20.4722 8.47991 21 10.22 21 12C21 14.3869 20.0518 16.6761 18.364 18.364C16.6761 20.0518 14.387 21 12 21Z" fill="url(#paint1_linear_310_11)"/><defs><linearGradient id="paint0_linear_310_11" x1="12" y1="8.25" x2="12" y2="16.0605" gradientUnits="userSpaceOnUse"><stop stop-color="#BCB7FF"/><stop offset="1" stop-color="#703AB4"/></linearGradient><linearGradient id="paint1_linear_310_11" x1="12" y1="1.5" x2="12" y2="22.5" gradientUnits="userSpaceOnUse"><stop stop-color="#BCB7FF"/><stop offset="1" stop-color="#703AB4"/></linearGradient></defs></svg>
            Risk-free, no-obligation quote
        </p>
    </div>
    <TrustedBy />

    <Title
        title="What We Offer"
        subtitle="WHAT'S INCLUDED"
        icon={ServicesHomepageIcon}
    />
    <BoxGrid items={benefits} />

    <TextImageGroup
        title="Set yourself up for success"
        text="At Futuremerce, your success is our mission. We’re dedicated to building Shopify stores that not only look great but also perform exceptionally. Join our growing list of satisfied clients and watch your online business thrive."
        image={imageGroup1}
    />
    <TextImageGroup
        title="Unleash Your Online Potential"
        text="Don’t let your online store blend into the background. With Futuremerce, your Shopify store will shine brightly in the competitive e-commerce landscape. Reach out to us today to explore how we can turn your vision into a reality and get a free project estimate."
        image={imageGroup2}
    />
    <TextImageGroup
        title="100% Satisfaction Guarantee"
        text="We will keep working and go above and beyond until we deliver a website that meets your satisfaction. With our commitment to unlimited revisions, you can be assured that the final product will be exactly what you envisioned."
        image={imageGroup3}
    />

    <Title title="We’re Futuremerce" subtitle="about" icon={AboutIcon} />
    <HomepageAbout />


    <Title
        title="Futuremerce vs other agencies vs in-house team"
        subtitle="WHAT MAKES US DIFFERENT"
        icon={ComparisonIcon}
    />
    <Container>
     <ComparisonTable />
     <Button type="primary" link="/get-started">Get a free quote</Button>
    </Container>

    <Title title="Let’s Talk Numbers" subtitle="PRICING" icon={pricing} />
    <BoxGrid items={pricingBoxes} />

    <FAQs faqs={faqs} />
</Layout>

<style is:inline>
    body > .button {
        margin: 40px auto;
    }

    .page-title > span {
        display: block;
    }

    .page-text {
        max-width: 560px;
    }

    .comparison-table + .button {
        margin: -70px 0 120px;
        display: none !important;
    }

    @media screen and (max-width: 767px) {
        .comparison-table + .button {
            display: flex !important;
            width: 100%;
            justify-content: center;
        }

        .page-title {
            font-size: 38px;
            line-height: 50px;
            margin-top: 20px;
            max-width: 400px;
        }

        .page-text {
            max-width: 330px;
        }
    }

    .title-group {
        margin-top: 140px;
    }

    .text-image-group:nth-of-type(n + 2) .text-image-group_title {
        max-width: 520px;
        font-size: 38px;
    }

    @media screen and (max-width: 767px) {
        .title-group {
            margin-top: 80px;
        }

        .breadcrumbs_back {
            display: none;
            margin-bottom: 20px;
        }
    }

    .text-image-group:nth-of-type(2n + 1) {
        flex-direction: row;
    }

    .text-image-group:nth-of-type(2n) {
        flex-direction: row-reverse;
    }

    .text-image-group:nth-of-type(2n + 1)::after {
        right: 100px;
        left: unset;
    }

    .text-image-group:nth-of-type(2n)::after {
        right: unset;
        left: 100px;
    }
</style>
