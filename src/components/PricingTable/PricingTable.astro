---
import Button from "../Button/Button.astro";

const plans = [
    {
        name: "Regular",
        price: 3999,
        descriptionLineOne: "One project at a time.",
        descriptionLineTwo: "Pause or cancel anytime.",
        points: [
            "One project at a time",
            "Dedicated Team",
            "Shopify development services",
            "Ongoing maintenance & support",
            "No lock-in contracts",
            "Pause or cancel anytime",
        ],
        button: {
            label: "Get Started Now",
            link: "https://buy.stripe.com/aEU3fLdATaCb5jieVc",
        },
        bestValue: false,
    },
    {
        name: "Pro",
        price: 5999,
        descriptionLineOne: "Two projects at a time.",
        descriptionLineTwo: "Pause or cancel anytime.",
        points: [
            "Two projects at a time",
            "Dedicated Team",
            "Shopify development services",
            "Ongoing maintenance & support",
            "No lock-in contracts",
            "Pause or cancel anytime",
        ],
        button: {
            label: "Get Started Now",
            link: "https://buy.stripe.com/5kA8A5cwP6lV1328wP",
        },
        bestValue: true,
    },
    {
        name: "Ultimate",
        price: "13999+",
        descriptionLineOne: "More than 3 projects at a time.",
        descriptionLineTwo: "Prioritised service.",
        points: [
            "3+ Projects at a time",
            "Dedicated Team",
            "Shopify development services",
            "Ongoing maintenance & support",
            "No lock-in contracts",
            "Pause or cancel anytime",
        ],
        button: {
            label: "Contact Sales",
            link: "/contact",
        },
        bestValue: false,
    },
];
---

<section class="pricing-table">
    {
        plans.map((plan) => {
            return (
                <div
                    class={`pricing-table_plan ${plan.bestValue ? "best-value" : ""}`}
                >
                    <h6 class="pricing-table_plan-name">{plan.name}</h6>
                    <div class="pricing-table_plan-price">
                        A${plan.price} <span>/ month</span>
                    </div>
                    <p class="pricing-table_plan-description">
                        {plan.descriptionLineOne} <br />{" "}
                        {plan.descriptionLineTwo}
                    </p>
                    <div class="pricing-table_plan-divider" />
                    {plan.points.map((point) => (
                        <div class="pricing-table_plan-point"> 
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M10.5 16.0605L6.75 12.3098L7.80975 11.25L10.5 13.9395L16.1887 8.25L17.25 9.31125L10.5 16.0605Z" fill="url(#paint0_linear_310_11)"/><path d="M12 1.5C9.9233 1.5 7.89323 2.11581 6.16652 3.26957C4.4398 4.42332 3.09399 6.0632 2.29927 7.98182C1.50455 9.90045 1.29661 12.0116 1.70176 14.0484C2.1069 16.0852 3.10693 17.9562 4.57538 19.4246C6.04383 20.8931 7.91476 21.8931 9.95156 22.2982C11.9884 22.7034 14.0996 22.4955 16.0182 21.7007C17.9368 20.906 19.5767 19.5602 20.7304 17.8335C21.8842 16.1068 22.5 14.0767 22.5 12C22.5 9.21523 21.3938 6.54451 19.4246 4.57538C17.4555 2.60625 14.7848 1.5 12 1.5ZM12 21C10.22 21 8.47992 20.4722 6.99987 19.4832C5.51983 18.4943 4.36628 17.0887 3.68509 15.4442C3.0039 13.7996 2.82567 11.99 3.17294 10.2442C3.5202 8.49836 4.37737 6.89471 5.63604 5.63604C6.89472 4.37737 8.49836 3.5202 10.2442 3.17293C11.99 2.82567 13.7996 3.0039 15.4442 3.68508C17.0887 4.36627 18.4943 5.51983 19.4832 6.99987C20.4722 8.47991 21 10.22 21 12C21 14.3869 20.0518 16.6761 18.364 18.364C16.6761 20.0518 14.387 21 12 21Z" fill="url(#paint1_linear_310_11)"/><defs><linearGradient id="paint0_linear_310_11" x1="12" y1="8.25" x2="12" y2="16.0605" gradientUnits="userSpaceOnUse"><stop stop-color="#BCB7FF"/><stop offset="1" stop-color="#703AB4"/></linearGradient><linearGradient id="paint1_linear_310_11" x1="12" y1="1.5" x2="12" y2="22.5" gradientUnits="userSpaceOnUse"><stop stop-color="#BCB7FF"/><stop offset="1" stop-color="#703AB4"/></linearGradient></defs></svg>
                            {point}
                        </div>
                    ))}
                    <Button link={plan.button.link} type="primary">
                        {plan.button.label}
                    </Button>
                    {plan.button.label == "Get Started Now" && (
                        <p class="pricing-table_plan-book">
                            or{" "}
                            <Button type="link" link="#book-a-call">
                                book a call
                            </Button>
                        </p>
                    )}
                </div>
            );
        })
    }
</section>
