---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

// Components
import Button from "../Button/Button.astro";
import TrustedBy from "../TrustedBy/TrustedBy.astro";

// Images
import backgroundLine from "../../images/background-line.png";
---

<header class="homepage-hero">
    <Image
        src={backgroundLine}
        alt=""
        loading="eager"
        class="homepage-hero_backgroud-line"
    />
    <div class="homepage-hero_inner">
        <Icon name="shopify" class="homepage-hero_icon" />
        <p class="homepage-hero_badge">Shopify Experts</p>
        <h1 class="homepage-hero_text">
            We build modern <span>high converting</span> Shopify stores<span
                >.</span
            >
        </h1>
        <Button type="primary" link="#book-a-call"
            >Book a free consultation</Button
        >
        <Icon name="devices" class="homepage-hero_icon" />
    </div>
    <TrustedBy />
</header>
